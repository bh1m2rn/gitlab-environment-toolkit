global
    log /dev/log local0
    log localhost local1 notice
    log stdout format raw local0
    maxconn 2000
    daemon
 
defaults
    log global
    mode http
    option httplog
    option dontlognull
    retries 3
    timeout connect 5000
    timeout client 50000
    timeout server 50000
 
frontend http-in
    bind *:80
    default_backend webservers
 
backend webservers
    option httpchk HEAD /
{% for ip in gitlab_rails_ips %}
    server gitlab-rails{{loop.index}} {{ ip }}:80 check
{% endfor %}

listen stats
    bind *:1936
    mode http
    stats enable
    stats uri /